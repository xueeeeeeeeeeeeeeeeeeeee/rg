.choosecinema {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  overflow-y: scroll;
}

.choose-top {
  display: flex;
  height: 23%;
  background-color: #401d1d;
  padding-top: 10px;
  padding-left: 10px;
}

.choose-top-img {
  height: 80%;
  border-radius: 10px;
}

.choose-top-right {
  margin-left: 20px;
  height: 100%;
  gap: 5px;
  display: flex;
  flex-direction: column;
}

.top-title {
  color: #fff;
  font-size: 25px;
  font-weight: bolder;
}

.top-tags {
  color: #c5bbbb;
  font-size: 10px;
  display: flex;
}

.top-tag {
  border-radius: 3px;
  padding-left: 3px;
  padding-right: 3px;
  color: #fff;
  background-color: #755c5c;
  margin-left: 10px;
  font-size: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-time {
  font-size: 10px;
  color: #c5bbbb;
}

.top-grades {
  color: #faaf00;
  font-weight: bolder;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.grades-right {
  margin-left: 10px;
  font-size: 13px;
  color: #c5bbbb;
}

.wanttosee {
  padding-right: 5px;
  border-radius: 5px;
  background-color: #836c6c;
  width: 100px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.wanttosee-img {
  height: 80%;
}

.choose {
  width: 100%;
  /* height: 6000px; */
  background-color: #fff;
  border-radius: 10px;
  transform: translateY(-10px);
  z-index: 99;
}

.choosedate {
  position: sticky;
  top: 0px;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  height: 40px;
  overflow-x: scroll;
  padding-left: 20px;
  white-space: nowrap;
background-color: #fff;
}

.dateitem {
  color: #333333;
  display: inline-block;
  min-width: 90px;
}

.choosecinemas {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  gap: 20px;
}

.choosecinemaitem {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-top: 20px;
  padding-left: 20px;
}

.choosecinemas-left {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.cinemaaddress {
  font-size: 12px;
  color: #666666;
}

.cinemalatest {
  color: #976666;
}

.choosecinemas-right {
  padding-right: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}
.cinemaprice{
  color: #f03d37;
}
.cinemadistance{
  display: flex;
  justify-content:flex-end;
  color: #a39999;
  font-size: 13px;
}