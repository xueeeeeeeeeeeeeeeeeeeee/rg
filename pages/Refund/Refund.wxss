/* pages/Refund/Refund.wxss */
page{
	height: 100vh;
}
.Refund{
	width: 100%;
	height: 100%;
	background: #f5f5f5;
}
.Refund .flex_container{
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.Refund .flex_container .refund_part1{
	width: 100%;
	background: white;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 15px 0;
}
.Refund .flex_container .refund_part1 text:first-child{
	width: 90%;
	height: 50px;
	line-height: 50px;
	font-size: 17px;
	color: rgba(0, 0, 0, 0.6);
	border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.Refund .flex_container .refund_part1 text:last-child{
	width: 90%;
	height: 50px;
	line-height: 50px;
	font-size: 17px;
	color: rgba(0, 0, 0);
}

.Refund .flex_container .refund_part2{
	width: 100%;
	background: white;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.Refund .flex_container .refund_part2 text:first-child{
	width: 90%;
	height: 50px;
	line-height: 50px;
	font-size: 17px;
	color: rgba(0, 0, 0, 0.6);
	border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.Refund .flex_container .refund_part2 view{
	width: 90%;
	display: flex;
	align-items: center;
}
.Refund .flex_container .refund_part2 view text:first-child{
	width: 80px;
	border: none;
	color: black;
}
.Refund .flex_container .refund_part2 view text:last-child{
	flex: 1;
	font-size: 14px;
	color: orange;
}

.Refund .flex_container .refund_part3{
	width: 100%;
	background: white;
	display: flex;
	flex-direction: column;
	align-items: center;
	margin: 15px 0;
}
.Refund .flex_container .refund_part3 text:first-child{
	width: 90%;
	height: 50px;
	line-height: 50px;
	font-size: 17px;
	color: rgba(0, 0, 0, 0.6);
	border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.Refund .flex_container .refund_part3 view{
	width: 90%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.Refund .flex_container .refund_part3 view text:first-child{
	width: 80px;
	border: none;
	color: black;
}
.Refund .flex_container .refund_part3 view text:last-child{
	color: red;
}

.btn_submit_refund{
	width: 90%;
	height: 45px;
	text-align: center;
	color: white;
	font-size: 20px;
	line-height: 45px;
	border-radius: 7px;
	background: orange;
	margin-top: 5px;
}

.warning{
	width: 90%;
	margin-top: 10px;
	display: flex;
	align-items: center;
}