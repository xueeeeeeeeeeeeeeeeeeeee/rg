.choosetime {
  width: 100vw;
  height: 100vh;
}

.choosetime-info {
  padding-top: 10px;
  padding-left: 10px;
  width: 100%;
  height: 60px;
  display: flex;
  /* flex-direction: column; */
  gap: 5px;
  justify-content: space-between;

}

.cinematitle {}

.cinemaaddress {
  font-size: 12px;
  color: #9b9b9b;
}

.info-right {
  display: flex;
  padding-right: 20px;
  justify-content: center;
}

.in {
  height: 50%;
  background-color: #9b9b9b;
  width: 1px;
}

.info-right image {
  height: 50%;
}

.area {
  display: flex;
  flex-direction: column;
  font-size: 10px;
  /* justify-content: center; */
  align-items: center;
}

.like {
  display: flex;
  flex-direction: column;
  font-size: 10px;
  /* justify-content: center; */
  align-items: center;
}

.moviewpic {
  transition: all 0.3s;
  display: flex;
  gap: 2vw;
  position: absolute;
  left: 50vw;
  padding-top: 10px;
}

.movieitem {
  height: 133px;
  width: 25vw;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
}

.movieselect {
  transition: all 0.5s;
  height: 133px;
  width: 25vw;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
  transform: scale(1.1);
  border: #fff solid 1px;
}

.movieitem image {
  width: 100%;
}

.choosetime-top {
  width: 100%;

  height: 180px;
  background-color: #9b9b9b;
}

.choosemovietime {
  width: 100%;
  position: relative;
}

.choosemovietime-top {
  padding-top: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 5px;
  padding-bottom: 10px;
  border-bottom: #f1f1f1 solid 1px;
}

.choosemovietime-top-title {
  font-size: 20px;
  display: flex;
  gap: 10px;
  justify-content: center;
  align-items: center;
}

.choosemovietime-top-grade {
  color: #ffb400;
  font-size: 19px;
}

.choosemovietime-top-info {
  color: #999999;
  font-size: 15px;
}

.choosemoviestrage {
  left: 50%;
  z-index: 999;
  background-color: #fff;
  height: 25px;
  width: 30px;
  position: absolute;
  top: -24px;
  -webkit-clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
}
.choosedate {
  position: sticky;
  top: 0px;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  height: 40px;
  overflow-x: scroll;
  padding-left: 20px;
  white-space: nowrap;
background-color: #fff;
}

.dateitem {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;

  min-width: 90px;
}
.selectdate{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333333;

  min-width: 90px;
  border-bottom: red solid 1px;
}
.moviewmain-item{
  padding: 20px 20px 20px 20px;
  display: flex;
  border-bottom: #d8d8d8 solid 1px;
  justify-content: space-between;
  align-items: center;
}
.moviemain-item-start{
  font-size: 20px;
}
.moviemain-item-end{
  margin-top: 5px;
  font-size:10px;
  color: #999999;
}
.moview-item-hall{
  margin-top: 5px;
  font-size:10px;
  color: #999999;
}
.moviewmain-item-price{
  color: #ef4238;
  font-size: large;
}
.moviewmain-item-button{
  border-radius: 15px;
  height:30px;
  width: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffb400;
  border: #ffb400 solid 1px;
}
