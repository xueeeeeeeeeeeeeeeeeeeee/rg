/* pages/Mine/Mine.wxss */
page{
	height: 100vh;
}
.Mine{
	width: 100%;
	height: 100%;
	background: linear-gradient(180deg, #ffb4b4 0%, #ffefef 30%);
}
.Mine .flex_container{
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.user_info{
	width: 90%;
	height: 70px;
	margin-top: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.user_info .user_avatar{
	width: 50px;
	height: 50px;
	overflow: hidden;
	border-radius: 50%;
	border: 2px solid white;
}
.user_info .user_info_vertical_part{
	flex: 1;
	height: 50px;
	font-size: 16px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	margin-left: 10px;
}
.user_info .user_info_vertical_part .user_name{
	font-size: 20px;
}
.user_info .user_info_vertical_part .user_experience{
	font-size: 10px;
	color: rgb(51, 51, 51);
	font-family:"阿里妈妈东方大楷 Regular",sans-serif;
}
.user_info .user_info_vertical_part .progress_bar{
	width: 100px;
}
.user_info .nav_personal_page{
	width: 100px;
	height: 30px;
	background: linear-gradient(to right, #ffffff, #ffffff00);
	text-align: center;
	line-height: 30px;
	border-radius: 15px 0 0 15px;
	font-size: 14px;
	color: rgb(99, 97, 97);
}

.favor{
	width: 90%;
	height: 50px;
	margin-top: 15px;
	background: rgba(255, 255, 255, 0.6);
	border-radius: 10px;
	display: flex;
}
.favor .have_watched{
	width: 50%;
	height: 100%;
	display: flex;
	align-items: center;
}
.favor .have_watched .have_watched_num{
	width: 20px;
	font-size: 30px;
	margin-left: 10px;
}
.favor .have_watched .have_watched_text{
	flex: 1;
}
.favor .have_watched .have_watched_arrow{
	font-size: 10px;
	font-weight: bolder;
	color: rgba(0, 0, 0, 0.404);
	margin-right: 10px;
}

.favor .desire_watching{
	width: 50%;
	height: 100%;
	display: flex;
	align-items: center;
}
.favor .desire_watching .desire_watching_num{
	width: 20px;
	font-size: 30px;
	margin-left: 10px;
}
.favor .desire_watching .desire_watching_text{
	flex: 1;
}
.favor .desire_watching .desire_watching_arrow{
	width: 20px;
	font-weight: bolder;
	color: rgba(0, 0, 0, 0.404);
	border-right: 1px solid rgba(0, 0, 0, 0.158);
}

.order{
	width: 90%;
	margin-top: 15px;
	padding-top: 10px;
	background: rgb(255, 255, 255);
	border-radius: 10px;
}
.order .order_title{
	margin-left: 10px;
	color: rgba(0, 0, 0, 0.61);
}
.order .order_type{
width: 100%;
margin-top: 20px;
display: flex;
justify-content: space-between;
align-items: center;
}
.order .order_type>view{
width: 25%;
margin-bottom: 20px;
font-size: 13px;
display: flex;
flex-direction: column;
align-items: center;
}
.order .order_type>view>image{
	width: 40px;
	height: 40px;
}

.discount_card{
	width: 90%;
	height: 80px;
	margin-top: 15px;
	background: rgb(255, 255, 255);
	border-radius: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.discount_card view{
	width: 25%;
	height: 45px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
}
.discount_card view>.discount_card_name{
	font-size: 16px;
}
.discount_card view>.discount_card_num{
	font-size: 14px;
	color: rgba(0, 0, 0, 0.596);
	letter-spacing: 0.1ch;
}